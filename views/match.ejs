<!DOCTYPE html>
<html>
	<head>
		<meta charset="utf-8" />
		<title>Matcha - chat</title>
		<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
		<link rel="stylesheet" type="text/css" href="css/style.css">
		<link rel="stylesheet" type="text/css" href="css/theme.css">
	</head>
	<body>
		<div class="container-fluid">
			<%- include includes/header.ejs %>
				<table class="table table-striped">
					<tbody id="tbod">
					</tbody>
				</table>
				<div style="text-align: center;"><input id="msg" type="text" placeholder="Parle ici" /><button id="button" class="btn btn-success">Envoyer</button></div>
			<%- include includes/footer.ejs %>
		</div>


		<script src="http://code.jquery.com/jquery-1.10.1.min.js"></script>
		<script src="/socket.io/socket.io.js"></script>
		<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js" integrity="sha384-Tc5IQib027qvyjSMfHjOMaLkfuWVxZxUPnCJA7l2mCWNIpG9mGCD8wGNIcPD7Txa" crossorigin="anonymous"></script>
		<script>
			var socket = io.connect('http://localhost:8888');

			askMatchs();
			function askMatchs(){
				socket.emit('didIMatch');
				socket.emit('needChat', <%= uid %>);
				socket.emit('didIVisit');
			}
			setInterval(askMatchs, 5000);
			socket.on('matchs', function(count) {
				if (count > 0) {
					$(".count").html(count);
					$(".cnt").html(".");
					$(".anticount").hide();
				}
			});
			socket.on('visited', function(count) {
				if (count > 0) {
					$(".cnt").html(".");
					$(".anticount").hide();
					$(".countvisited").html(count);
				}
			});

			$("#button").click(function() {
				if ($("#msg").val() != ""){
					socket.emit("newMsg", { msg: $("#msg").val(), receiver: <%= uid %> });
				}
				$("#msg").val("");
				socket.emit('needChat', <%= uid %>);
			});

			socket.on('chat', function(messages) {
				$("#tbod").html("");
				messages.forEach(function(message) {
					if (message.senderid == <%= muid %>)
						$('#tbod').append("<tr><td style='float: left;'>" + message.message + "</td></tr>");
					else
						$('#tbod').append("<tr><td style='float: right;'>" + message.message + "</td></tr>");
				});
			});
		</script>
	</body>
</html>